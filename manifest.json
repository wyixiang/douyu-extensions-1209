{  
  "name": "斗鱼助手",
  "description": "对斗鱼的功能进行一些扩展/修改, 更好的斗鱼用户体验",
  "version": "0.2.1",
  "manifest_version": 2,
  "background": {
    "_page": "background.html",
    "scripts": ["js/jquery172.min.js", "js/const.js", "js/util.js", "js/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://*.douyu.com/*","https://*.douyu.com/*"],
    "js": ["js/jquery172.min.js", "js/const.js", "js/util.js", "js/content.js", "js/jquery.numeric.js", "js/gift.js"],
    "run_at": "document_end",
    "all_frames": false
  }],
  "browser_action": {
    "default_icon": "res/icon.png" ,
    "default_title": "斗鱼助手",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "cookies", "storage", "webRequest", "webRequestBlocking", "notifications", "http://*/*","https://*/*"
  ],
  "icons":
  {
    "16": "res/icon.png",
    "48": "res/icon.png",
    "128": "res/icon.png"
  },
  "web_accessible_resources": [
    "js/*.js",
    "css/*.css",
    "res/*"
  ]
}